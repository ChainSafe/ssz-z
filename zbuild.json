{
  "name": "ssz",
  "version": "0.1.0",
  "fingerprint": "0x1d34bd0ccc66e4c8",
  "minimum_zig_version": "0.14.0",
  "paths": [
    "build.zig",
    "build.zig.zon",
    "src"
  ],
  "dependencies": {
    "snappy": {
      "url": "git+https://github.com/chainsafe/snappy#7f30207aadbf9509b51ce9e0d4cdb7ae83a2a86e"
    },
    "yaml": {
      "url": "git+https://github.com/chainsafe/zig-yaml#7bf2516ccad74c6dcfbdb328e12638ad318a5644"
    }
  },
  "write_files": {
    "codegen": {
      "private": true,
      "items": {
        "types": {
          "type": "file",
          "path": "types_codegen:captureStdOut"
        }
      }
    }
  },
  "options_modules": {
    "build_options": {
      "zero_hash_max_depth": {
        "type": "usize"
      }
    },
    "spec_test_options": {
      "spec_test_url": {
        "default": "https://github.com/ethereum/consensus-spec-tests",
        "type": "string"
      },
      "spec_test_version": {
        "default": "v1.5.0-beta.2",
        "type": "string"
      },
      "spec_test_out_dir": {
        "default": "test/spec/spec_tests",
        "type": "string"
      }
    }
  },
  "modules": {
    "hex": {
      "root_source_file": "src/hex.zig",
      "private": true
    },
    "persistent-merkle-tree": {
      "root_source_file": "src/persistent-merkle-tree/root.zig",
      "imports": [
        "build_options",
        "hex"
      ]
    },
    "ssz": {
      "root_source_file": "src/ssz/root.zig",
      "imports": [
        "build_options",
        "hex",
        "persistent-merkle-tree"
      ]
    }
  },
  "executables": {
    "types_codegen": {
      "root_module": {
        "root_source_file": "test/lodestar_types/root.zig",
        "imports": [
          "ssz"
        ]
      }
    },
    "download_spec_tests": {
      "root_module": {
        "root_source_file": "test/spec/download_spec_tests.zig",
        "imports": [
          "spec_test_options"
        ]
      }
    }
  },
  "libraries": {
    "types": {
      "root_module": {
        "root_source_file": "codegen:types"
      }
    }
  },
  "tests": {
    "int": {
      "root_module": {
        "root_source_file": "test/int/root.zig",
        "imports": [
          "hex",
          "ssz"
        ]
      },
      "filters": []
    },
    "lodestar_types": {
      "root_module": {
        "root_source_file": "test/lodestar_types/root.zig",
        "imports": [
          "ssz"
        ]
      },
      "filters": []
    },
    "spec_tests": {
      "root_module": {
        "root_source_file": "test/spec/general_tests.zig",
        "imports": [
          "hex",
          "snappy",
          "ssz",
          "spec_test_options",
          "yaml"
        ]
      },
      "filters": []
    }
  }
}